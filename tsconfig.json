{
  "compilerOptions": {
    "target": "es5",
    //"lib": ["es5", "ES6", "dom", "dom.iterable"],
    "outDir": "./build",
    "paths": {
      "@src/*": ["src/*"],
      "@components/*": ["src/components/*"],
      "@core/*": ["src/core/*"],
      "@modules/*": ["src/modules/*"],
      "@icons/*": ["src/assets/icons/*"],
      "@images/*": ["src/assets/images/*"],
      "@ui/*": ["src/ui/*"]
    },
    "sourceMap": true,
    "module": "CommonJS",
    "allowJs": true,
    "jsx": "react",
    "esModuleInterop": true,
    "experimentalDecorators": false,
    "allowSyntheticDefaultImports": true,
    "baseUrl": "./",
    //"alwaysStrict": true,
    //"noImplicitAny": true,
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "strictPropertyInitialization": true,
    "noImplicitThis": true,
    "strictBindCallApply": true,
    "noPropertyAccessFromIndexSignature": true,
    "noUncheckedIndexedAccess": true,
    // Linter Checks
    "noFallthroughCasesInSwitch": true, // https://eslint.org/docs/rules/no-fallthrough
    "noImplicitReturns": true, // https://eslint.org/docs/rules/consistent-return
    "noUnusedLocals": false, // https://eslint.org/docs/rules/no-unused-vars
    "noUnusedParameters": false, // https://eslint.org/docs/rules/no-unused-vars#args
    "allowUnreachableCode": false, // https://eslint.org/docs/rules/no-unreachable
    "allowUnusedLabels": false, // https://eslint.org/docs/rules/no-unused-labels
    // Core Checks
    "noImplicitUseStrict": false,
    "noStrictGenericChecks": false,
    "suppressExcessPropertyErrors": false,
    "suppressImplicitAnyIndexErrors": false
  },
  "include": ["src/**/*", "src/types.d.ts", "src/assets/js"],
  "exclude": ["node_modules", "**/*.test.ts"]
}
